<atlassian-plugin name='${project.name}' key='auiplugin-tests' pluginsVersion="2">
    <plugin-info>
        <description>${project.description}</description>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <version>${project.version}</version>
    </plugin-info>

    <!--<resource name="js/" type="download" location="js/"/>-->

    <servlet key="static-resources" class="com.atlassian.aui.test.FuncTestServlet">
        <url-pattern>/ajstest/*</url-pattern>
    </servlet>

    <web-resource key="qunit" name="Atlassian QUnit Tests">
        <resource type="download" name="all-unit-tests.js" location="unit-tests/tests/all-unit-tests.js"/>
        <resource type="download" name="qunit.js" location="unit-tests/external/qunit/qunit.js"/>
        <resource type="download" name="qunit.css" location="unit-tests/external/qunit/qunit.css"/>
        <resource type="download" name="bootstrap.js" location="unit-tests/tests/js/bootstrap.js"/>
        <resource type="download" name="whenitype.js" location="unit-tests/tests/js/whenitype-unit-tests.js"/>
    </web-resource>

    <web-item key="demoPages" section="index.links" weight="10" application="refapp">
        <label>AUI Demo Pages</label>
        <link linkId="demoPages">/plugins/servlet/ajstest/test-pages/index.html</link>
    </web-item>

    <web-item key="qunitTests" section="index.links" weight="20" application="refapp">
        <label>AUI QUnit Tests</label>
        <link linkId="qunitTests">/plugins/servlet/ajstest/unit-tests/tests/allTests.html</link>
    </web-item>
</atlassian-plugin>
