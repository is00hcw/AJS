<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.atlassian.jira.gwt.client.widgets'>


    <g:HTMLPanel>
        <label ui:field="label">
            <span class="formIcon iconRequired" ui:field="required">
                <span>required</span>
            </span>
        </label>
        <g:TextBox styleName="text" ui:field="input" />
        <span class="error" ui:field="error"></span>
        <span class="description" ui:field="description"></span>
    </g:HTMLPanel>
</ui:UiBinder>